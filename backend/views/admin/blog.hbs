<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}}!
            <a href="/admin/login/logout" class="btn btn-sm btn-danger">
            Cerrar Sesión <i class="fa fa-sign-out"></i></a></p>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h2>Entradas del Blog</h2>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/blog/agregar" class="btn btn-success"><i class="fa fa-plus">
            </i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blog}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/blog/modificar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/blog/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{else}}
                        <div class="card card-body text-center">
                            <p>No hay ninguna entrada subida al Blog.</p>
                        </div> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>